{
  "name": "ibkr-tax-calculator",
  "version": "1.0.0",
  "description": "This application calculates UK capital gains tax for stocks and shares based on transactions from QFX (Quicken Exchange Format) or CSV files, typically exported from trading platforms like Interactive Brokers or Sharesight.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "playwright test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:unit:ci": "jest --coverage --watchAll=false --ci",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit:ci && npm run test:e2e",
    "test:accessibility": "jest --testNamePattern='accessibility'",
    "dev:spa": "vite --config frontend/vite.config.ts",
    "build:spa": "vite build --config frontend/vite.config.ts",
    "preview:spa": "vite preview --config frontend/vite.config.ts",
    "lint": "eslint frontend/src --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.54.2",
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "sass": "^1.93.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.7",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/addon-onboarding": "^9.1.7",
    "@storybook/addon-vitest": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-transform-stub": "^2.0.0",
    "msw": "^2.11.3",
    "postcss-preset-env": "^10.4.0",
    "prop-types": "^15.8.1",
    "storybook": "^9.1.7",
    "typescript": "^5.9.2",
    "vite": "^5.4.0"
  }
}
